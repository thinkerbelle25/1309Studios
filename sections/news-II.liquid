{{ 'news1-section.css' | asset_url | stylesheet_tag }}
<div class="news2-section">
    <div class="news2-main-container">
        <div class="news2-header">
            <h2 class="headings h1 news2-h1">{{ section.settings.heading }}</h2>
        </div>
        <div class="news2-item-container">
            {% for block in section.blocks %}
              <div>
                 <ul class="news2-item-content">
                    <li>
                      <h4>
                        {% unless block.settings.title != blank %} News Title {% endunless %}
                        {{ block.settings.title }}
                      </h4>
                      <div class="news-2-mobile">
                        <div class="news-2-mobile-item ">
                          {% unless block.settings.title != blank %} News Title {% endunless %}
                          {{ block.settings.title }}
                        </div>
                      </div>
                    </li>
                    <li><a class="news2_link" href="{{ block.settings.url }}">Read More</a></li>
                 </ul>
                 <div class="p">
                    {{ block.settings.text }}
                 </div>
              </div>
              {% else %}
              <div>
                <ul class="news2-item-content">
                   <li>
                    <h4>News title</h4>
                    <div class="news-2-mobile">
                      <div class="news-2-mobile-item ">
                        News title
                      </div>
                    </div>
                  </li>
                   <li><a class="news2_link"  href="#">Read More</a></li>
                </ul>
                <div class="p">
