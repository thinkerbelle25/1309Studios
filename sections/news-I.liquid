{{ 'news1-section.css' | asset_url | stylesheet_tag }}
<div class="news1-section">
    <div class="news1-main-container">
        <div class="news1-header">
            <h2 class="headings h1">{{ section.settings.heading }}</h2>
        </div>
        <div class="news1-item-container">
            {% for block in section.blocks %}
              <div>
                <a href="{{ section.settings.link }}">
                  {% if block.settings.image != blank %}
                  <img loading="lazy" height="auto" width="auto" src="{{ block.settings.image | image_url }}" />
                  {% else %}
                    <div class="placeholder">
                      <div class="placeholder_svg_sm">
                          {{ 'image' | placeholder_svg_tag }}
                      </div>
                  </div>
                  {% endif %}
                </a>
              </div>
              {% else %}
              {% for i in (1..6) %}
              <div>
                <div class="placeholder">
                  <div class="placeholder_svg_sm">
                      {{ 'image' | placeholder_svg_tag }}
                  </div>
              </div>
              </div>
              {% endfor %}
            {% endfor %}
        </div>
       
    </div>
</div>
{% schema %}
{
  "name": "News I",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "News"
    }
  ],
  "blocks": [
    {
      "type": "news",
      "name": "News",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "News I"
    }
  ]
}
{% endschema %}

